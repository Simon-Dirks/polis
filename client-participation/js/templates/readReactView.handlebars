<div
  id="readReactView"
  >

  {{!-- Top of "Card stack" --}}
  <div
  	class="
  		custom_gutter
  		lightPanel
  		"
  	style="
  		position:relative;
  		top: 0px;
  		z-index: 3;
        margin-bottom: 1rem;
  		{{!-- min-height: 144px; attempt to avoid flashing on vote view load--}}
  	">


    <button class="reactionButton" id="switchBetweenCommentsAndVotingButton">
        {{#if showingComments}}
            <span class="reactionButtonIcon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 33.5 53.4" xml:space="preserve">
                    <path d="M33.5 46.6 13.7 26.7 33.5 6.8 26.7 0 0 26.7l26.7 26.7z"/>
                </svg>
            </span>
            <span>STEM</span>
        {{else}}
            <span class="reactionButtonIcon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 33.5 53.4" xml:space="preserve">
                  <path d="m0 6.8 19.9 19.9L0 46.6l6.8 6.8 26.7-26.7L6.8 0z"/>
                </svg>
            </span>
            <span>NIEUW</span>
        {{/if}}
    </button>

    {{!-- This is the optional social prompt --}}
	  {{#if promptFacebook}}
	  <div style="margin: 20px;" class="Notification Notification--warning">
	    <p class="HeadingF HeadingF--light pull-right" style="cursor: pointer" role="button" type="button" id="fbNotNowBtn">
	    	<i class="fa fa-times"></i> Not now
	    </p>
	    <div>
	      <p class="facebookCaveatText">
		      Connect Facebook and invite your friends to see them in the visualization! We will not post on your behalf.
	      </p>
	      <div class="text-center">
		    	<button id="fbConnectBtn" class="facebookButton">
		    		<i class="fa fa-facebook-square"></i>&nbsp; Connect Facebook
		      </button>
	      </div>
	    </div>
	  </div>
	  {{else}}
        {{#if showingComments}}
            {{!  ------------ SUBMIT COMMENT FORM ---------------  }}
            <div
                    id="commentFormParent"
                    class="POLIS_COMMENT_FORM {{#if no_write}}displayNone{{/if}}"
            >
                {{view commentForm}}
            </div>
        {{else}}
          {{view voteView}}
        {{/if}}

	  {{/if}}
	</div>


	{{#if false}}
  	{{!-- Empty "Card stack" div1 (notice css "top" and "width") --}}
	<div
		style="
			min-height: 30px;
			position:relative;
			top: -26px;
			z-index: 2;
			margin: 0 auto;
			width: 99%;
		"
		class="lightPanel">
	</div>
  	{{!-- Empty "Card stack" div2 (notice css "top" and "width") --}}
	<div
		style="
			min-height: 30px;
			position:relative;
			top: -52px;
			z-index: 1;
			margin: 0 auto;
			width: 98%;
		"
		class="lightPanel">
	</div>
	{{/if}}
</div>
